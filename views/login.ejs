<section>
    <div class="contentpanel">
        <div class="panel panel-signin">
            <div class="panel-body">
                <form name="loginForm" ng-submit="login()" novalidate>
                    <div class="input-group mb15">
                        <label>用户名</label>
                        <input type="text" name="name" ng-model="user.name" ng-required="true" />
                        <span class="error-message" ng-show="loginForm.name.$dirty&& loginForm.name.$error.required">name required</span>
                    </div>
                    <div class="input-group mb15">
                        <label>密码</label>
                        <input type="password" name="password" ng-model="user.password" ng-required="true" />
                        <span class="error-message" ng-show="loginForm.password.$dirty&& loginForm.password.$error.required">password required</span>
                    </div>
                    <div class="pull-right">
                        <input type="submit" class="btn btn-success" value="登录" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
