<div class="contentpanel">
    <div class="panel-body order-d">
        <form class="form-horizontal form-bordered">
            <div class="form-group">
                <label class="col-sm-1 control-label">手机号</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.mobile" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">姓名</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.detail_name" readonly>
                </div>
                <label class="col-sm-1 control-label">性别</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.gender" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">公司名称1</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.company_name1" readonly>
                </div>
                <label class="col-sm-1 control-label">身份证号</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.identified_number" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">公司名称2</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.company_name2" readonly>
                </div>
                <label class="col-sm-1 control-label">公司名称3</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" ng-value="item.company_name3" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-4">
                    <textarea class="detail_txt" disabled>{{item.description}}</textarea>
                </div>
            </div>
        </form>
    </div>
</div>
