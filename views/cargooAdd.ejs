<div class="contentpanel">
    <div class="panel-body messages_box">
        <form class="form-horizontal form-bordered" ng-submit="add()">
            <div class="form-group">
                <label class="col-sm-1 control-label">货物分类</label>
                <div class="col-sm-2">
                    <select name="category" ng-model="category">
                        <option value="1">汽油</option>
                        <option value="2">菜油</option>
                        <option value="3">化工品</option>
                        <option value="4">其他</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">货物名称</label>
                <div class="col-sm-2 w180 ml0">
                    <input type="text" class="form-control" ng-required="true" ng-model="name">
                </div>
            </div>
            <div class="col-sm-2 mt20 ml100">
                <input type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>
    </div>
</div>
